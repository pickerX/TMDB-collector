<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Light" parent="Text">
        <item name="android:textColor">@color/color_353442</item>
    </style>

    <style name="Text.Dark" parent="Text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Light.Poster" parent="Text">
        <item name="android:textColor">@color/color_353442</item>
